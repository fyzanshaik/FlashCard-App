generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model UserFlashCard {
  id     Int    @id @default(autoincrement())
  title  String
  answer String
  userId Int
  user   User   @relation(fields: [userId], references: [id])

  @@unique([id, userId])
}

model PublicFlashCard {
  id     Int    @id @default(autoincrement())
  title  String
  answer String
}

model User {
  id         Int             @id @default(autoincrement())
  firstName  String
  lastName   String
  username   String          @unique
  password   String
  flashCards UserFlashCard[]
}
